
<div class="container-fluid">
 <section class="se-container">
    	<div class="se-slope">
    		<article class="se-content">
    			<h3>Nado-Gram</h3>
    			<p>Boldly Go <i class="fa fa-diamond" aria-hidden="true"></i></p>
    		</article>
    	</div>
    	<div class="se-slope">
    		<!-- ... -->
    	</div>
    	<!-- ... -->
 
 </section>
</div>
<div class="topics-wrapper">  
 
    <% @topics.reverse.each do |topic| %>
    
      <div class ="jumbotron">  
        <div class="text-center">
            <div class ="topic-title">
                
                <h2><%= topic.title %></h2>
                <i class="fa fa-smile-o"></i>
            </div>
            <div class= "topic-image">
                  <% if topic.image? %>
                    <%= link_to (image_tag topic.image.url(:large), class:'img-responsive'), topic_path(topic) %>
                  <% end %>
            </div>
            </end>  
            
            <div class="topic-description">
                      <h3><%= topic.description %></h3>
            </div>
            <div class = "center">
                    <div class ="btn-group btn-group-lg">
                        
                        
                      
                        <%= link_to 'View', topic_path(topic), class: "btn btn-default" %>
                        <%= link_to  'Delete!', topic_path(topic), method: :delete, class:"btn btn-default", data: { confirm: 'Are you sure?' } %>
                    
                    </div>
                    <div>
                           <div><%= link_to "",upvote_topic_path(topic), method: :post, class: 'glyphicon glyphicon-chevron-up' %></div>
                           <div><strong><%= pluralize(topic.votes.count,"vote") %></strong></div>
                           <div><%#= link_to "", downvote_topic_path(topic), method: :post, class: 'glyphicon glyphicon-chevron-down' %></div>
                    </div>
            </div>
           
        </div> 
      </div>    
    <% end %>  
    
</div>


